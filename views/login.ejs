<div class="signup-container">
	<div class="left">
		<div class="head-img">
			<img src="/images/logo.svg" alt="">
		</div>
		<div class="sub-heading">
			<h1>Welcome!</h1>
			<p class="light-sub-heading">Login To Your Account</p>
		</div>
		
		<form action="/users/create-session" method="POST" style="margin-top: 50px;">
			<input type="email" name="email"  placeholder="Email-id" required>
			<input type="password" name="password" placeholder="Password" required>
			<input type="submit" value="LOGIN">			
		</form>
		<p class="middle-text">OR</p>	
		<div class="social-btn" style="justify-content: space-evenly;">
			<a href="/users/auth/google"><button class="btn-google">
