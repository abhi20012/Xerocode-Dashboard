<div class="signup-container">
	<div class="left">
		<div class="head-img">
			<img src="/images/logo.svg" alt="">
		</div>
		<div class="sub-heading">
			<p class="text-3xl font-bold text-black font-style-Nunito">Hello!</h1>
			<p class="light-sub-heading">Create your Account</p>
		</div>
		
		<form action="/users/create" method="POST">
			<input type="text" name="firstName"  placeholder="First Name" required>
			<input type="text" name="lastName"  placeholder="Last Name" required>
			<input type="email" name="email"  placeholder="Email-id" required>
			<input type="password" name="password" placeholder="Password" required>
			<input type="password" name="confirm_password" placeholder="Confirm Password" required>
			<input type="submit" value="SIGN UP">			
		</form>

		<p>OR</p>
		<div class="social-btn">
			<button class="btn-google">
				Sign Up With Google
				<img src="/images/icons8-google.svg" alt="">
			</button>
			
			<button class="btn-github">
				Sign Up With Github
				<img src="/images/icons8-github.svg" alt="">
			</button>
		</div>

		<p>Already have an Account ? <a href="/users/signin">LOGIN</a></p>

	</div>
	<div class="right">
		<img src="/images/bro.svg" alt="">
		<img src="/images/Vector.svg" alt="">
	</div>
</div>


